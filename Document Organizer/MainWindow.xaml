<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Document_Organizer.MainWindow"
        Title="MainWindow" Height="700" Width="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="Files" Grid.Row="1" SelectionChanged="ShowSelectionFromFiles"/>
        <TreeView x:Name="ORM" Grid.Row="1" SelectedItemChanged="ShowSelectionFromDB" Grid.Column="1"/>
        <DockPanel Grid.Row="1" Grid.Column="2">
            <Grid DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="1">Name</Label>
                <TextBox x:Name="PartName" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <Label Grid.Row="3">Datasheet</Label>
                <Label Grid.Row="3" Grid.Column="1" Margin="5">PLACEHOLD PLACEHOLD PLACEHOLD NEED BROWSE BUTTON?</Label>

                <Label Grid.Row="4">Distributer URL</Label>
                <TextBox Grid.Row="4" Grid.Column="1" Margin="5"></TextBox>

                <Label Grid.Row="5">Manufacturer</Label>
                <ComboBox x:Name="Manufacturer" DropDownOpened="UpdateManufacturersCombobox" Grid.Row="6" Grid.Column="1" Margin="5"/>

            </Grid>

            <Grid DockPanel.Dock="Bottom">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="1" Grid.Column="0" Click="DeleteEntry" Content="Delete" Margin="5" Padding="4"/>
                <Button Grid.Row="1" Grid.Column="2" Click="SaveEntry" Content="Save" Margin="5" Padding="4"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>